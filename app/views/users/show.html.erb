<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<div class="col-xs-8">
  <div class="col-xs-offset-1 article-title">
    <h1><%= @user.username %>.</h1>
  </div><hr><br>
  <div class="col-xs-offset-2 article-description">
    <h3><%= plural_humanize(@user.articles.count, "article") if @user.articles %></h3>
  </div>
</div>

<%= render 'articles/article', obj: @user.articles %>
